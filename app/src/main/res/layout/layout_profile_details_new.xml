<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_rounded_profile"
    android:paddingVertical="16dp"
    android:paddingHorizontal="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        android:textSize="16sp"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/open_sans_semibold"
        />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@id/tvPersonName"
        android:background="@color/white"
        />

    <TextView
        android:id="@+id/tvPersonCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view1"
        android:gravity="center"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/open_sans_semibold"
        />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvPersonCode"
        android:background="@color/white"
        />

   <TextView
       android:id="@+id/tvSignOut"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginStart="20dp"
       android:layout_marginVertical="20dp"
       android:drawablePadding="16dp"
       android:drawableStart="@drawable/baseline_logout_24"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@id/view2"
       android:text="Sign Out"
       android:textSize="16sp"
       android:fontFamily="@font/open_sans_semibold"
       />

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvSignOut"
        android:background="@color/white"
        />


    <TextView
        android:id="@+id/tvappVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view3"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Version 1.0"
        android:textSize="16sp"
        android:fontFamily="@font/open_sans_semibold"
        />

</androidx.constraintlayout.widget.ConstraintLayout>