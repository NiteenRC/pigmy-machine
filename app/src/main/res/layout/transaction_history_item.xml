<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/history_item_bg">

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceCaption"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="24-08-1995"/>

    <TextView
        android:id="@+id/nameLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/date"
        app:layout_constraintEnd_toStartOf="@id/centerDivider"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textAppearance="?attr/textAppearanceBody2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nameLabel"
        app:layout_constraintEnd_toStartOf="@id/centerDivider"
        tools:text="name"/>

    <TextView
        android:id="@+id/accountTypeLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Account Type:"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintEnd_toStartOf="@id/centerDivider"/>

    <TextView
        android:id="@+id/accountType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textAppearance="?attr/textAppearanceBody2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/accountTypeLabel"
        app:layout_constraintEnd_toStartOf="@id/centerDivider"
        tools:text="accountType"/>

    <TextView
        android:id="@+id/depositLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Deposit:"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/accountType"
        app:layout_constraintEnd_toStartOf="@id/centerDivider"/>

    <TextView
        android:id="@+id/depositAmount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textAppearance="?attr/textAppearanceBody2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/depositLabel"
        app:layout_constraintEnd_toStartOf="@id/centerDivider"
        tools:text="deposit amount"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/centerDivider"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.45"/>

    <TextView
        android:id="@+id/accNoLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Account No:"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@id/centerDivider"
        app:layout_constraintTop_toBottomOf="@id/date"
        app:layout_constraintEnd_toStartOf="@id/divider"/>

    <TextView
        android:id="@+id/accNo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textAppearance="?attr/textAppearanceBody2"
        app:layout_constraintStart_toEndOf="@id/centerDivider"
        app:layout_constraintTop_toBottomOf="@id/accNoLabel"
        app:layout_constraintEnd_toStartOf="@id/divider"
        tools:text="name"/>

    <TextView
        android:id="@+id/agentNameLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Agent Name:"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@id/centerDivider"
        app:layout_constraintTop_toBottomOf="@id/accNo"
        app:layout_constraintEnd_toStartOf="@id/divider"/>

    <TextView
        android:id="@+id/agentName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textAppearance="?attr/textAppearanceBody2"
        app:layout_constraintStart_toEndOf="@id/centerDivider"
        app:layout_constraintTop_toBottomOf="@id/agentNameLabel"
        app:layout_constraintEnd_toStartOf="@id/divider"
        tools:text="accountType"/>

    <TextView
        android:id="@+id/prevAmountLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Previous Amount:"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@id/centerDivider"
        app:layout_constraintTop_toBottomOf="@id/accountType"
        app:layout_constraintEnd_toStartOf="@id/divider"/>

    <TextView
        android:id="@+id/prevAmount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textAppearance="?attr/textAppearanceBody2"
        app:layout_constraintStart_toEndOf="@id/centerDivider"
        app:layout_constraintTop_toBottomOf="@id/prevAmountLabel"
        app:layout_constraintEnd_toStartOf="@id/divider"
        tools:text="deposit amount"/>

    <ImageView
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_delete_24"
        app:tint="@android:color/holo_red_dark"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@id/divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>