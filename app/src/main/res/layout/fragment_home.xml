<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="20dp"
    android:paddingTop="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="20dp"
    tools:context=".MainActivity">

    <AutoCompleteTextView
        android:id="@+id/avNameAccNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/name_or_acc_no"
        android:paddingStart="5dp"
        android:paddingTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingEnd="20dp" />

    <TextView
        android:id="@+id/tvAccountType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/avNameAccNo"
        android:layout_below="@+id/avNameAccNo"
        android:paddingStart="5dp"
        android:paddingTop="20dp"
        android:paddingEnd="20dp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvPrevAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvAccountType"
        android:layout_below="@+id/tvAccountType"
        android:paddingStart="5dp"
        android:paddingTop="20dp"
        android:paddingEnd="20dp"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/tvAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPrevAmount"
        app:layout_constraintTop_toBottomOf="@id/tvPrevAmount"
        android:hint="@string/amount"
        android:inputType="number"
        android:paddingStart="5dp"
        android:paddingTop="20dp"
        android:paddingEnd="20dp" />

    <TextView
        android:id="@+id/tvTotalAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvAmount"
        android:layout_below="@+id/tvAmount"
        android:hint="@string/total_amount"
        android:paddingStart="5dp"
        android:paddingTop="20dp"
        android:paddingEnd="20dp"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="0dp"
        android:layout_height="56dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toBottomOf="@id/tvTotalAmount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnClear"
        android:layout_marginTop="50dp"
        android:text="@string/submit"
        android:onClick="onClick"
        android:textSize="20sp"
        android:fontFamily="@font/open_sans_semibold"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btnClear"
        android:layout_width="0dp"
        android:layout_height="56dp"
        app:layout_constraintTop_toBottomOf="@id/tvTotalAmount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        android:layout_marginStart="12dp"
        android:textSize="20sp"
        android:fontFamily="@font/open_sans_semibold"
        app:layout_constraintStart_toEndOf="@id/btnSubmit"
        android:layout_marginTop="50dp"
        android:layout_toEndOf="@+id/btnSubmit"
        android:text="@string/clear"
        android:onClick="onClick"
        android:textAlignment="center" />

</androidx.constraintlayout.widget.ConstraintLayout>