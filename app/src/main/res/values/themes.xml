<resources>
    <!-- Base application theme. -->
    <style name="Theme.Pigmy" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/iris_blue</item>
        <item name="colorPrimaryVariant">@color/iris_dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/iris_blue</item>
        <item name="colorSecondaryVariant">@color/iris_dark_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

<!--    <style name="PFLockScreenButtonStyle" parent="Theme.Material3.Light">-->
<!--        <item name="android:textColor">@android:color/black</item>-->
<!--        <item name="android:background">@drawable/touch_selector_pf</item>-->
<!--    </style>-->

    <style name="PFLockScreenHintTextStyle">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="PFLockScreenDeleteButtonStyle">
        <item name="android:src">@drawable/delete_lockscreen_pf</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="PFLockScreenNextTextStyle">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18dp</item>
        <item name="android:backgroundTint">#FF1992E6</item>
    </style>

    <style name="PFCheckBox">
        <item name="android:checkboxStyle">@style/PFLockScreenCodeStyle</item>
        <item name="checkboxStyle">@style/PFLockScreenCodeStyle</item>
    </style>
    <style name="PFLockScreenCodeStyle">
    <item name="android:button">@drawable/code_selector_pf</item>
</style>
</resources>